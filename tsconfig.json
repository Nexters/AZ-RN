{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "src": ["./*"],
      "@svg/*": ["res/svg/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "exclude": ["./node_modules/**/*"]
}
